extends ../layout/layout

block content
    div(class="container-fluid")
        div(class="row")
            div(class="col-sm-10 col-sm-offset-1" )
                div(class="task" id="task")
                    h2 班级作业
                    -if(tasks)
                        each task in tasks
                            div(class="task-one")
                                h1 
                                    a(href="task/"+task.userName+"/"+task.taskTitle) 标题：#{task.taskTitle}
                                p 内容：#{task.taskContent}
                                span 发布时间：#{task.postDate.minute}
                                span 发布人：#{task.userName}
                                span 浏览了#{task.pv}次
                    //- p #{tasks.length}
                    p 当前页数：#{page}
                    p 总共#{total}条公告
                    div
                        -if(!isFirstPage)
                            a(class="btn btn-lg btn-success" href="?page="+(page-1)) 上一页
                        -if(!isLastPage)
                            a(class="btn btn-lg btn-success" href="?page="+(page+1)) 下一页
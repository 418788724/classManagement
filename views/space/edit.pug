extends ../layout/layout

block content
    h2(class="text-center") #{title}
    //- action='/space/upheader'
    form(method='post' enctype='multipart/form-data' class="main-title form-horizontal" role="form")
        div(class="form-group")
            label(for="fileavatar" class="col-sm-2 control-label")
            div(class="col-sm-10")
                input(type="file" class="btn btn-default" name="fileavatar" id="fileavatar")
                //-input(type="hidden" name="publisher" class="publisher" id="publisher" value=task._id)
        div(class="form-group")
            div(class="col-sm-offset-2 col-sm-10")
                input(type="button" class="btn btn-default" id="upavatar" value="上传头像")
            //-input(type="submit")
    form(method="post" class="main-title form-horizontal" role="form")
        fieldset(disabled)
            div(class="form-group" width="50%")
                label(for="username" class="col-sm-2 control-label") 名字
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="username" name="username" value=user.username)
            div(class="form-group")
                label(for="userage" class="col-sm-2 control-label") 年龄
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="userage" name="userage" value=user.userage)
        div(class="form-group")
            label(for="password" class="col-sm-2 control-label") 修改密码
            div(class="col-sm-10")
                input(type="password" class="form-control" id="password" name="password" placeholder="请输入密码")
        div(class="form-group")
            label(for="reppassword" class="col-sm-2 control-label") 确认密码
            div(class="col-sm-10")
                input(type="password" class="form-control" id="reppassword" name="reppassword" placeholder="请再次输入密码")
        div(class="form-group")
            label(for="number" class="col-sm-2 control-label") 修改电话
            div(class="col-sm-3")
                input(disabled="disabled" type="text" class="form-control" name="number" value=user.number)
            div(class="col-sm-7")
                input(type="text" class="form-control" id="number" name="number" placeholder="请输入电话")
        div(class="form-group")
            label(for="email" class="col-sm-2 control-label") 修改email
            div(class="col-sm-3")
                input(disabled="disabled" type="email" class="form-control" name="email" value=user.email)
            div(class="col-sm-7")
                input(type="email" class="form-control" id="email" name="email" placeholder="请输入email")
        div(class="form-group")
            div(class="col-sm-offset-2 col-sm-10")
                input(type="submit" class="btn btn-default" vlaue="保存修改")
    script(src="/javascripts/multer/upavatar.js")
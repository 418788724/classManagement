- var visitorList = {'/':'首页','/notice':'公告','/task':'作业','/login':'登录'};
- var ordinaryList = {'/':'首页','/notice':'公告','/member':'成员','/space':'空间','/task':'作业','/logout':'注销'};
- var godList = {'/':'首页','/notice':'公告','/member':'成员','/space':'空间','/task':'作业','/mange':'管理','/logout':'注销'};
nav(class="navbar navbar-inverse navbar-fixed-top" role="navigation")
    div(class="container-fluid")
        div(class="navbar-header")
            button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example-navbar-collapse")
                span(class="sr-only") 切换导航
                span(class="icon-bar")
                span(class="icon-bar")
                span(class="icon-bar")
            a(class="navbar-brand" href="#") 班级管理系统
            -if(user)
                a(href="/space")
                    img(id="avatar" src='/'+user.avatar)
                    span(id="sessionName" index=user._id) #{user.username}
        div(class="collapse navbar-collapse" id="example-navbar-collapse")
            ul(class="nav navbar-nav navbar-right")
                -if(user)
                    case Boolean(user.superman)
                        when true : each value, index in godList
                                        li
                                            a(href=index, title=value) #{value}
                    case Boolean(user.superman)
                        when false : each value, index in ordinaryList
                                        li
                                            a(href=index, title=value) #{value}
                - else
                    each value, index in visitorList
                        li
                           a(href=index, title=value) #{value}
            </ul>
        </div>
    </div>
</nav>
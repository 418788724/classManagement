extends ../layout/layout

block content
    link(href='/stylesheets/canvas/loginbg.css', rel='stylesheet')
    div(id="large-header" class="large-header")
        canvas(id="demo-canvas")
        form(method="post" class="main-title form-horizontal" role="form")
            div(class="form-group" width="50%")
                label(for="username" class="col-sm-2 control-label") 名字
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="username" placeholder="请输入名字")
            div(class="form-group")
                label(for="password" class="col-sm-2 control-label") 密码
                div(class="col-sm-10")
                    input(type="password" class="form-control" id="password" placeholder="请输入密码")
            div(class="form-group")
                div(class="col-sm-offset-2 col-sm-10")
                    div(class="checkbox")
                        label
                            input(type="checkbox")
                            span 请记住我
            div(class="form-group")
                div(class="col-sm-offset-2 col-sm-10")
                    button(type="submit" class="btn btn-default") 登录
    script(src="javascripts/canvas/EasePack.min.js")
    script(src="javascripts/canvas/TweenLite.min.js")
    script(src="javascripts/canvas/loginbg.js")
    script(src="javascripts/login/login.js")
extends ./layout/layout

block content
    //- .main-title
    //-     padding-top: 50px;
    form(method="post" class="main-title form-horizontal" role="form")
        div(class="form-group")
            label(for="studentId" class="col-sm-2 control-label") 学号
            div(class="col-sm-10")
                input(type="text" class="form-control" id="studentId" name="studentId" placeholder="学号")
        div(class="form-group" width="50%")
            label(for="username" class="col-sm-2 control-label") 名字
            div(class="col-sm-10")
                input(type="text" class="form-control" id="username" name="username" placeholder="请输入名字")
        div(class="form-group")
            label(for="password" class="col-sm-2 control-label") 密码
            div(class="col-sm-10")
                input(type="password" class="form-control" id="password" name="password" placeholder="请输入密码")
        div(class="form-group")
            label(for="number" class="col-sm-2 control-label") 电话
            div(class="col-sm-10")
                input(type="text" class="form-control" id="number" name="number" placeholder="请输入电话")
        div(class="form-group")
            label(for="email" class="col-sm-2 control-label") email
            div(class="col-sm-10")
                input(type="email" class="form-control" id="email" name="email" placeholder="请输入email")
        div(class="form-group")
            label(for="age" class="col-sm-2 control-label") 年龄
            div(class="col-sm-10")
                input(type="number" class="form-control" id="age" name="age" placeholder="请输入年龄")
        div(class="form-group")
            label(for="superman" class="col-sm-2 control-label") 是否老师？
            div(class="col-sm-10")
                input(type="checkbox" class="form-control" id="superman" name="superman")
        div(class="form-group")
            div(class="col-sm-offset-2 col-sm-10")
                input(type="submit" class="btn btn-default" vlaue="登录")